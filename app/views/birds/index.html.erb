<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top m-0" id="navbar-scroll">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= image_tag "stork.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <%= image_tag "https://wingardium-leviosa.com/wp-content/uploads/2018/03/hermione-granger-personnage-categorie-1.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Bookings", bookings_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="home-banner">
  <h1>Pigeon Express</h1>
</div>


<div class="d-flex">
  <div class="col-8">
    <div class="m-4">
      <% @birds.each_slice(3) do |birds| %>
        <div class="row">
          <% birds.each do |bird| %>
            <div class="col-sm-12 col-md-6 col-lg-4">
              <div class="card-bird m-1">

                <div class="card-content">
                  <h2><%= bird.species %></h2>
                  <% if bird.image.blank? %>
                    <%= link_to bird_path(bird) do %>
                      <%= image_tag 'https://i.pinimg.com/originals/eb/c7/53/ebc75307bf7a5facdb5bd4bf42af1e4f.png' %>
                    <%end  %>
                  <% else %>
                    <%= link_to bird_path(bird) do %>
                      <%= image_tag bird.image  %>
                      <% end  %>
                  <% end  %>
                  <h2><%= bird.name %></h2>
                </div>

                <div class="card-description">
                  <div>
                    <%= bird.rating %> <i class="fas fa-star" style="color: #272343"></i>
                  </div>
                  <p>Price : <%= bird.price %> â‚¬</p>
                </div>

              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col p-0 m-0">
    <div id="map" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
</div>

